{
    "manifest_version": 2,
    "name": "AGENT X",
    "description": "Label extension for use with the AIST Agent",
    "version": "0.2",
    "browser_action": {
        "default_popup": "index.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "web_accessible_resources": [
        "*"
    ],
    "background": {
      "scripts": [
        "jquery.min.js",
        "background.js"
      ],
      "persistent": false
    },
    "content_scripts": [
        {
          "matches": [
            "http://*/*",
            "https://*/*"
          ],
          "css": [
            "agentx-style.css",
            "tooltipster.bundle.min.css"
          ],
          "js": [
            "jquery.min.js",
            "tooltipster.bundle.min.js",
            "scraper.js",
            "selector.js",
            "overlay.js",
            "content.js"
          ]
        }
      ],
      "permissions": [
        "activeTab",
        "storage"
      ]
}